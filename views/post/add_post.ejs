<form action="/add-post" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" id="title" placeholder="Enter Title" name="title" required="required">
  </div>
  <div class="form-group">
    <label>Snippet</label>
    <input type="text" class="form-control" id="snippet" placeholder="Enter snippet" name="snippet" required="required">
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea class="form-control" rows="3" id="description" placeholder="Enter Description" name="description" required="required"></textarea>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>